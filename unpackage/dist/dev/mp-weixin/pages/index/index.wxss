.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
  margin-top: 20rpx;
}
.home .nav .nav-item {
  width: 25%;
  text-align: center;
}
.home .nav .nav-item view {
  width: 120rpx;
  height: 120rpx;
  background-color: #aa0000;
  border-radius: 60rpx;
  margin: auto;
  line-height: 120rpx;
  color: #fff;
  font-size: 50rpx;
}
.home .nav .nav-item .icon-tupian {
  font-size: 45rpx;
}
.home .nav .nav-item text {
  font-size: 30rpx;
}
.home .hot_goods {
  background-color: #eee;
  overflow: hidden;
  margin-top: 20rpx;
}
.home .hot_goods .tit {
  height: 100rpx;
  line-height: 100rpx;
  color: #aa0000;
  text-align: center;
  letter-spacing: 40rpx;
  background-color: #fff;
  margin: 12rpx 0;
}

